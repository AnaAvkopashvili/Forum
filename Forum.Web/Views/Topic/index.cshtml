@* @page 
@using Forum.Application.Topics.Responses
@model Forum.Application.PagedList<TopicResponseModel>

<h1>Topics</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Created</th>
            <th>Author</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var topic in Model)
        {
            <tr>
                <td>@topic.Title</td>
                <td>@topic.Content</td>
                <td>@topic.Created</td>
                <td>@topic.UserUserName</td>
            </tr>
        }
    </tbody>
</table>

<div>
    @{
        var prevDisabled = !Model.HasPrevious ? "disabled" : "";
        var nextDisabled = !Model.HasNext ? "disabled" : "";
    }

    <a asp-page="/Topics/Index"
       asp-route-pageNumber="1"
       asp-route-pageSize="@Model.PageSize"
       aria-label="First">
        <span aria-hidden="true">&laquo;</span>
    </a>

    <a asp-page="/Topics/Index"
       asp-route-pageNumber="@(Model.CurrentPage - 1)"
       asp-route-pageSize="@Model.PageSize"
       aria-label="Previous"
       class="@prevDisabled">
        <span aria-hidden="true">&lsaquo;</span>
    </a>

    @for (var page = 1; page <= Model.TotalPages; page++)
    {
        <a asp-page="/Topics/Index"
           asp-route-pageSize="@Model.PageSize"
           class="@(page == Model.CurrentPage ? "active" : "")">
        </a>
    }

    <a asp-page="/Topics/Index"
       asp-route-pageNumber="@(Model.CurrentPage + 1)"
       asp-route-pageSize="@Model.PageSize"
       aria-label="Next"
       class="@nextDisabled">
        <span aria-hidden="true">&rsaquo;</span>
    </a>

    <a asp-page="/Topics/Index"
       asp-route-pageNumber="@Model.TotalPages"
       asp-route-pageSize="@Model.PageSize"
       aria-label="Last">
        <span aria-hidden="true">&raquo;</span>
    </a>
</div> *@